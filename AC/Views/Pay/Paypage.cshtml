
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pay</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/layui/css/layui.css" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <style>
        html {
            width: 100%;
            height: 100%;
        }

        #ImageP{
            position:relative;
            top:30px;
            left:40px;
        }
        #address{
            position:relative;
            top:50px;
            width:245px;
        }
        #name {
            position: relative;
            top:40px;
            left:-80px;
            width: 80px;
        }
        #tel {
            position: relative;
            
            left: 45px;
            width: 160px;
        }
        #sure {
            position: relative;
            top: 50px;
            left: 100px;
            width: 100px;
            background-color: rgb(245,209,82);
            border-radius:20px;
        }
    </style>
</head>
<body>
    <div>
        <p align="center">

            <input id="address" size="5" placeholder="收货地址" class="layui-input" />
            <br>
            <input id="name" size="5" placeholder="收货人" class="layui-input" />
            <input id="tel" size="5" placeholder="电话号码" class="layui-input" />
            <br>
            <br>
            <br>
            <hr>
            <img id="ImageP" Height="255" Width="249" />
            <input type="button" value="确认" id="sure" />
        </p>
        
    </div>

</body>
</html>


<script>
    var url = location.search;
    document.getElementById("ImageP").src = url.slice(14); //传过来的数据包含 订到id和图片路径  故用slice(14)删掉前十四个字符,即得到图片路径
    var id = url.substring(0, 14).slice(1);//
    console.log(id);
    $("#sure").click(function () {
        var name = $("#name").val();
        var address = $("#address").val();
        var tel = $("#tel").val();
        $.post(`AddCustomer`, { id: id, name: name ,address:address,tel:tel}, function (data) {
            alert(data);

        })
        window.location.href = "/Front/UserCom";
    })
</script>
