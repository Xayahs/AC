            //后端写一个接口 然后使用post调用这个接口 然后把这两个参数传递进去
            table.reload('Combo', {
                url: '/Home/SelectCombo',
                where: {
                    condition: Name,
                    num: Code,
                },
                parseData: function (res) {
                    console.log(res);
                    var data = JSON.parse(res);
                    return {
                        "code": 0,
                        "count": data.PageTotal,
                        "data": data.DataSources
                    };
                }
            })
        });
    });

